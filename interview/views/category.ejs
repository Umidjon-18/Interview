          </li>
          <li class="nav-item">
            <a class="nav-link" href="/books">Books</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">new category</a>
          </li>
      </ul>
      <form class="form-inline my-2 my-lg-0" action="/search" method="POST">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="searchPost">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form>
    </div>
  </nav>


  <div class="admin-top">

  </div>

  <div class="admin-body">
    <div class="row">
      <div class="col-md-3">
        <table class="table">
          <thead>
            <tr class="table-primary">
              <th scope="col" style="font-size: 13px;">AUTHENTICATION AND AUTHORIZATION</th>
            </tr>
          </thead>
          <tbody>
            <tr>

              <td><a href="">Groups</a> <button class="btn btn-light" disabled
                  style="position: absolute;right: 15px;margin-top: -5px;">+ Add</button></td>

            </tr>
            <tr>

              <td><a href="">Users</a> <button class="btn btn-light" disabled
                  style="position: absolute;right: 15px;margin-top: -5px;">+ Add</button></td>
            </tr>
            <tr>

              <td></td>
            </tr>
          </tbody>
          <thead>
            <tr class="table-primary">
              <th scope="col" style="font-size: 13px;">PHOTOS</th>
            </tr>
          </thead>
          <tbody>
            <tr>

              <td><a href="/admin/category">Category</a> <button class="btn btn-light" disabled
                  style="position: absolute;right: 15px;margin-top: -5px;">+ Add</button></td>

            </tr>
            <tr>

              <td><a href="/admin/photos">Photos</a> <button class="btn btn-light" disabled
                  style="position: absolute;right: 15px;margin-top: -5px;">+ Add</button></td>
            </tr>
            <tr>

              <td></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-md-8">
        <div class="add-category">
          <h2>Add Category</h2>
          <form class="form-inline" action="/admin/category/add" method="POST">
            <div class="form-group mx-sm-3 mb-2">
              <label for="inputPassword2" class="sr-only">New Category</label>
              <input type="text" class="form-control" placeholder="New Category" name="newCategory">
            </div>
            <button type="submit" class="btn btn-primary mb-2">Add</button>
          </form>
        </div>

        <br><hr>
        <div class="category">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Category name</th>

              </tr>
            </thead>
            <tbody>

              <% category.forEach((value)=>{ %>
                <tr>
                  <th scope="row">
                    <b>
                      <%=value.id%>
                    </b>
                  </th>
                  <td>
                    <b>
                      <%=value.nomi%>
                    </b>
                  </td>
                </tr>
                <% }) %>




            </tbody>
          </table>
        </div>
      </div>
    </div>


</body>

</html>